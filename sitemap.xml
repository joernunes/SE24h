<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9
                            http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd">
    <!-- 
      Sitemap pour un site d'une seule page.
      Il ne contient que l'URL racine car toutes les sections 
      (comme "Comment ça marche", "Contact", etc.) font partie de cette unique page.
    -->
    <url>
        <!-- URL canonique du site -->
        <loc>https://siteen24h.netlify.app/</loc>
        
        <!-- Date de la dernière modification importante -->
        <lastmod>2024-05-21</lastmod>
        
        <!-- Fréquence de modification estimée (weekly, monthly, yearly) -->
        <changefreq>monthly</changefreq>
        
        <!-- Priorité de cette page (pour un site d'une seule page, c'est toujours 1.0) -->
        <priority>1.0</priority>
    </url>
</urlset>
